<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <EditText
            android:id="@+id/console"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="24"
            android:hint="@string/_console"
            android:inputType="numberDecimal" />
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:layout_gravity="end">

            <Button
                android:id="@+id/button_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:onClick="calcOperation"
                android:text="@string/_minus"
                android:textSize="@dimen/button_text_land"/>

            <Button
                android:id="@+id/button_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:onClick="calcOperation"
                android:text="@string/_plus"
                android:textSize="@dimen/button_text_land"/>

            <Button
                android:id="@+id/button_multiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:onClick="calcOperation"
                android:text="@string/_multiply"
                android:textSize="@dimen/button_text_land"/>

            <Button
                android:id="@+id/button_divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:onClick="calcOperation"
                android:text="@string/_divide"
                android:textSize="@dimen/button_text_land"/>

            <Button
                android:id="@+id/button_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:onClick="calcOperation"
                android:text="@string/_percent"
                android:textSize="@dimen/button_text_land" />

            <Button
                android:id="@+id/button_ce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_margin="@dimen/margin"
                android:onClick="calcOperation"
                android:text="@string/_clear_one"
                android:textSize="@dimen/button_text_land" />

            <Button
                android:id="@+id/button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:onClick="setNumberOperation"
                android:text="@string/_1"
                android:textSize="@dimen/button_text_land"/>

            <Button
                android:id="@+id/button_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:onClick="setNumberOperation"
                android:text="@string/_2"
                android:textSize="@dimen/button_text_land"/>

            <Button
                android:id="@+id/button_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:onClick="setNumberOperation"
                android:text="@string/_3"
                android:textSize="@dimen/button_text_land"/>

            <Button
                android:id="@+id/button_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:onClick="setNumberOperation"
                android:text="@string/_4"
                android:textSize="@dimen/button_text_land"/>

            <Button
                android:id="@+id/button_ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:onClick="calcOperation"
                android:text="@string/_clear_all"
                android:textSize="@dimen/button_text_land" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:onClick="setNumberOperation"
                android:text="@string/_5"
                android:textSize="@dimen/button_text_land"/>

            <Button
                android:id="@+id/button_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:onClick="setNumberOperation"
                android:text="@string/_6"
                android:textSize="@dimen/button_text_land"/>

            <Button
                android:id="@+id/button_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:onClick="setNumberOperation"
                android:text="@string/_7"
                android:textSize="@dimen/button_text_land"/>

            <Button
                android:id="@+id/button_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:onClick="setNumberOperation"
                android:text="@string/_8"
                android:textSize="@dimen/button_text_land"/>

            <Button
                android:id="@+id/button_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:onClick="calcOperation"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:text="@string/_result"
                android:textSize="@dimen/button_text_land" />

            <Button
                android:id="@+id/button_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:onClick="setNumberOperation"
                android:text="@string/_point"
                android:textSize="@dimen/button_text_land" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:onClick="setNumberOperation"
                android:text="@string/_9"
                android:textSize="@dimen/button_text_land"/>

            <Button
                android:id="@+id/button_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:onClick="setNumberOperation"
                android:text="@string/_0"
                android:textSize="@dimen/button_text_land"/>

        </GridLayout>
    </LinearLayout>
</FrameLayout>